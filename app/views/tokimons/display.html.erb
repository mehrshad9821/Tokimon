<div class="row">
  <div class="col-sm-6">
    <h3>Tokimons</h3>
  </div>
  <div class="col-sm-6">
    <%= link_to 'Back', tokimons_path, class:"btn btn-default pull-right", style: "margin-left:10px;margin-top:10px;" %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12" id="container-box" style="overflow:scroll; overflow-y:visible;">

      <% @tokimons.each do |tokimon| %>
        <div class="border text-center" style="display:inline-block;margin:5px;width:<%= tokimon.weight %>px;height:<%= tokimon.height %>px"><%= tokimon.name %></div>
      <% end %>

  </div>
</div>
<style>
#container-box{background:#EEE;padding:5em;white-space:nowrap;vertical-align:bottom;}
#container-box div{border:1px darkblue solid;vertical-align:bottom; display:inline-block;left:0;margin-right:1em; }
.red-bg{background:red;}
.green-bg{background:green;}
.blue-bg{background:blue;}

</style>
